@using PagedList.Mvc;
@using PagedList
@using Guitar.Models
@using Guitar.ViewModel
@model PagedList.IPagedList<Guitar.ViewModel.MusicDetailsViewModel>
@{
    Layout = null;
}
@foreach (MusicScoreComment p in Model.MSC)
{
    <div class="pinlun">
        <table cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td class="ta1">
                        <div class="taimg">
                            <a href="@Url.Action("UserIndex", new { User_Id = p.Users.User_id })"><img src="@p.Users.User_img" class="img-responsive img-rounded" /></a>

                        </div>
                        <div class="taname"><a href="@Url.Action("UserIndex", new { User_Id = p.Users.User_id })"></a>@p.Users.User_name</div>
                    </td>
                    <td class="ta2">
                        <div class="taa1">
                            <i class="fa fa-user-circle" aria-hidden="true"></i> 发表于  @p.Addtime
                        </div>
                        <div class="taa2">
                            @p.content
                        </div>

                        <input type="hidden" name="Ms_id" value="@Model.MScore.Ms_id" />
                        <input type="hidden" name="Commentid2" value="@p.Ms_commentid" />

                        <div class="fabiao huifu aclick">
                            <div style="float:right"><a class="">回复</a></div>
                            <div style="clear:both"></div>
                        </div>

                        <div class="comment">
                            @foreach (MusicCommentReplyViewModel m in Model.MSR.Where(n => n.Ms_commentid == p.Ms_commentid))
                            {
                                <input type="hidden" name="Commentid1" value="@p.Ms_commentid" />
                                        <div class="huifui1">
                                            <div class="hui1">
                                                <div class="huiimg">
                                                    <a><img src="@m.User_img" class="img-responsive img-rounded" /></a>
                                                </div>
                                                <div class="huiother">
                                                    <div class="r1"><a>@m.User_name</a>  发表于  @m.Addtime</div>
                                                    <div class="r2">@m.content</div>
                                                </div>
                                                <div style="clear:both"></div>
                                            </div>
                                        </div>
                            }


                            <div class="m aclick">
                                <div style="float:right"><a class="">我也来说一句</a></div>
                                <div style="clear:both"></div>
                            </div>
                            <div class="myreply">
                                @using (Html.BeginForm("Reply", "MusicScore", FormMethod.Post, new { id = "pinglung", @class = "postbox" }))
                                {
                                    <div class="myimg">
                                        <img src="@Session["User_img"]" class="img-responsive img-rounded" />
                                    </div>
                                            <input type="hidden" name="Ms_id2" value="@Model.MScore.Ms_id" />
                                            <input type="hidden" name="Commentid" value="@p.Ms_commentid" />
                                            <div class="mycontent">
                                                <textarea class="textarea2" name="pingluntextarea2"></textarea>
                                                <div class="fabiao2">
                                                    <a href="javascript:document.getElementById('pinglung').submit()" class="btn btn-info">回复</a>
                                                </div>
                                            </div>
                                }

                            </div>
                        </div>

                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}



@foreach (var apr in Model)
{
    <div class="reply">
        <div class="reuserimage">
            <img id="Image1" src="@apr.UserImage1" style="width: 100%; height: 100%;" />
        </div>
        <a href="@Url.Action("UserCenter","UserInfo",new {Users_id = @apr.Users_id1})"><div class="repostname">@apr.UserName1</div></a>
        <div class="reposttime">@apr.ReplyTime1</div>
        @{if (@apr.ReReply_id1 != null)
            {
                <div class="rereplycontent">
                    <a href="@Url.Action("UserCenter","UserInfo",new {Users_id = @apr.Users_id2})"><span style="display: block; margin-left: 10px; color: rgb(153, 153, 153);">@apr.UserName2</span></a>
                    <span style="display: block; margin-left: 10px; color: rgb(81, 81, 81);">@Html.Raw(apr.ReplyContent2)</span>
                </div>
            }
        }

        <div class="ReplyContent">@Html.Raw(apr.ReplyContent1) </div>
        <input id="btnReply3" class="cssbtnReply" value="回复" readonly="readonly" type="submit" />
        <input type="hidden" class="huifuHidden" id="HiddenField1" value="@apr.Reply_id1" />
        <hr style="border-bottom: 1px solid #E6E6E6; display: block; float: right; margin: 25px 0px 0px; width: 100%;" />
    </div>
            }


